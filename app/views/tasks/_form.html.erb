<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <p>
    <%= form.label :title, "タスク名" %>
    <%= form.text_field :title %>
  </p>
  </div>

  <div class="field">
  <p>
    <%= form.label :content, "コメント" %>
    <%= form.text_field :content %>
  </p>
  </div>

  <div class="field">
  <p>
    <%= form.label :limit, "終了期限" %>
    <%= form.text_field :limit %>
  </p>
  </div>

  <div class="field">
  <p>
    <%= form.label :status, "ステータス" %>
    <%= form.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
  </p>
  </div>

  <div class="field">
  <p>
    <%= form.label :priority, "優先順位" %>
    <%= form.select :priority, [["高", "高"], ["中", "中"], ["低", "低"]], include_blank: "選択して下さい" %>
  </p>
  </div>

  <div class="actions">
    <%= form.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>
